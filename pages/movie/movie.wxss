/* pages/movie/movie.wxss */

.meta {
  display: flex;
  flex-direction: column;
  height: 1000rpx;
  padding: 50rpx 40rpx;
}

.meta #img {
  width: 100%;
  height: 600rpx;
}

.meta #img image{
  display: block;
  width: 100%;
  height:100%;
  margin: 0px;
  padding: 0px;
}

.poster {
  width: 80%;
  height: 80%;
  margin: 20rpx;
}

.title {
  font-style: 42rpx;
  color: #444;
  text-align: center;
}

.info {
  color: #ccc;
  font-size: 30rpx;
}

.label {
  display: block;
}

.content {
  color: #666;
  font-size: 30rpx;
  padding: 10rpx;
}
